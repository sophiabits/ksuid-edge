{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib"
  },
  "include": ["src", "types/base-convert-int-array.d.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
